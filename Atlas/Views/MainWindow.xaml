<Window x:Class="Atlas.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atlas - Media Vault"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        AllowDrop="True"
        Drop="Window_Drop"
        DragEnter="Window_DragEnter">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Header -->
		<Border Grid.Row="0"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,15">
			<Grid>
				<StackPanel Orientation="Horizontal" VerticalAlignment="Center">
					<TextBlock Text="🗺️ ATLAS"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"/>
					<TextBlock x:Name="MediaCountText"
                               Text="0 items"
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="15,0,0,0"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
					<Button Content="📁 Import Files"
                            Style="{StaticResource ModernButton}"
                            Height="35"
                            Padding="15,5"
                            Click="ImportButton_Click"
                            Margin="0,0,10,0"/>
					<Button Content="⚙️"
                            Style="{StaticResource ModernButton}"
                            Width="35"
                            Height="35"
                            Padding="0"
                            Click="SettingsButton_Click"/>
				</StackPanel>
			</Grid>
		</Border>

		<!-- Content Area -->
		<Grid Grid.Row="1">
			<!-- Empty State -->
			<StackPanel x:Name="EmptyState"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="Visible">
				<TextBlock Text="📦"
                           FontSize="72"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
				<TextBlock Text="Your vault is empty"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
				<TextBlock Text="Drag &amp; drop files here or click Import to add media"
                           FontSize="14"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"/>
			</StackPanel>

			<!-- Media Grid -->
			<ScrollViewer x:Name="MediaScroller"
                          VerticalScrollBarVisibility="Auto"
                          Visibility="Collapsed">
				<WrapPanel x:Name="MediaPanel"
                           Margin="20"
                           Orientation="Horizontal"/>
			</ScrollViewer>
		</Grid>

		<!-- Status Bar -->
		<Border Grid.Row="2"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,10">
			<TextBlock x:Name="StatusText"
                       Text="Ready"
                       FontSize="12"
                       Foreground="{StaticResource TextSecondaryBrush}"/>
		</Border>
	</Grid>
</Window>