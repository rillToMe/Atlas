<Window x:Class="Atlas.Views.PinEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Atlas - Enter PIN"
        Height="450"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<Grid Margin="40">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<!-- Content -->
			<StackPanel Grid.Row="0">
				<TextBlock Text="🗺️ ATLAS"
                           FontSize="42"
                           FontWeight="Bold"
                           Foreground="{StaticResource PrimaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

				<TextBlock Text="Welcome back!"
                           FontSize="16"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

				<TextBlock Text="Enter your PIN:"
                           FontSize="13"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,0,0,8"/>

				<PasswordBox x:Name="PinBox"
                             Style="{StaticResource ModernPasswordBox}"
                             Height="50"
                             FontSize="20"
                             MaxLength="8"
                             KeyDown="PinBox_KeyDown"/>

				<TextBlock x:Name="ErrorText"
                           Text=""
                           Foreground="#EF4444"
                           FontSize="12"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"
                           Visibility="Collapsed"/>
			</StackPanel>

			<!-- Button -->
			<Button Grid.Row="1"
                    Content="Unlock 🔓"
                    Style="{StaticResource ModernButton}"
                    Width="200"
                    Height="45"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0"
                    Click="UnlockButton_Click"/>

			<!-- Forgot PIN -->
			<TextBlock Grid.Row="2"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,0">
				<Hyperlink Click="ForgotPin_Click"
                           Foreground="{StaticResource PrimaryBrush}"
                           TextDecorations="None">
					<Run Text="Forgot PIN?"/>
				</Hyperlink>
			</TextBlock>
		</Grid>
	</ScrollViewer>
</Window>